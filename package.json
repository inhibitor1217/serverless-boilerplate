{
  "name": "serverless-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for backend using serverless, koa.js, typescript, AWS RDS, etc",
  "scripts": {
    "debug": "npx ts-node-dev --respawn --transpile-only --ignore-watch node_modules ./src/server.ts",
    "deploy": "npx serverless deploy",
    "remove": "npx serverless remove",
    "test": "APP_STAGE=test npx mocha -r ts-node/register ./src/**/*.test.ts",
    "start:local": "APP_STAGE=local yarn debug",
    "test:local": "TEST_ENV=local yarn test",
    "deploy:beta": "APP_STAGE=beta yarn deploy",
    "remove:beta": "APP_STAGE=beta yarn remove",
    "test:beta": "TEST_ENV=beta yarn test",
    "deploy:release": "APP_STAGE=release yarn deploy",
    "remove:release": "APP_STAGE=release yarn remove",
    "test:release": "TEST_ENV=release yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inhibitor1217/serverless-boilerplate.git"
  },
  "author": "inhibitor <inhibitor@kaist.ac.kr>",
  "license": "MIT",
  "homepage": "https://github.com/inhibitor1217/serverless-boilerplate#readme",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/chai-as-promised": "^7.1.3",
    "@types/koa": "^2.11.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/mocha": "^8.0.3",
    "@types/pg": "^7.14.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "mocha": "^8.1.1",
    "serverless": "^1.79.0",
    "serverless-pseudo-parameters": "^2.5.0",
    "serverless-webpack": "^5.3.4",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.60",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@koa/router": "^9.4.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa__router": "^8.0.2",
    "aws-sdk": "^2.739.0",
    "dotenv": "^8.2.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "pg": "^8.3.2",
    "serverless-http": "^2.5.0"
  }
}
